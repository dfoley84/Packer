{
"provisioners": [
  {
      "type": "shell",
      "inline": [
          "sleep 30",
          "apt-add-repository ppa:ansible/ansible -y",
          "/usr/bin/apt-get update",
          "/user/bin/apt upgrade -y",
          "/usr/bin/apt-get -y install ansible"
      ]
  },
{
  "type": "shell",
   "inline": [
       "sleep 30",
       "ansible-galaxy install geerlingguy.clamav -y"
   ]
},
{
  "type": "ansible-local",
  "playbook_file": "./Ansible/domain.yml"
},
{
  "type": "ansible-local",
  "playbook_file": "./Ansible/java.yml"
},
{
  "type": "ansible-local",
  "playbook": "./Ansible/filebeat.yml"
},
{
  "type": "ansible-local",
  "playbook": "./Ansible/metricbeat.yml"
},
],
  "builders": [{
  "type": "amazon-ebs",
  "access_key": "{{user `aws_access_key`}}",
  "secret_key": "{{user `aws_secret_key`}}",
  "region": "us-east-1",
  "source_ami_filter": {
    "filters": {
      "virtualization-type": "hvm",
      "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
      "root-device-type": "ebs"
    },
    "owners": ["099720109477"],
    "most_recent": true
  },
  "instance_type": "t2.micro",
  "ssh_username": "ubuntu",
  "ami_name": "Ubuntu_elasticSearch-{{timestamp}}",
  "launch_block_device_mappings": [{
    "device_name": "/dev/sda1",
    "volume_size": 60,
    "volume_type": "gp2",
    "delete_on_termination": true
  }]
}]
}
